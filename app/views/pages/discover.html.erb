<div class="container" id="discover=page-content">

  <div class="container-fluid gradient-background-1 mt-1 pb-1 px-0">
    <h2 class="spotify-label mt-4 mb-0 mx-2 mt-2">Upcoming Shows</h2>

    <div id="posts" class="horizontal-scroll-container mt-2" >
      <% @posts.each do |post| %>
        <div class="container post-card" style="max-width: 200px;">
          <%= render post %>
        </div>
      <% end %>
    </div>

  </div>
  <div class="container-fluid gradient-background-2 px-0 pt-1">
    <div class="card dark-page">
      <h2 class="spotify-label mt-4 mb-0 mx-2 mt-2">Artists</h2>

      <div id="posts" class="horizontal-scroll-container mt-2" >
        <% @artists.each do |artist| %>
          
          <%= render artist %>
        
        <% end %>
      </div>
    </div>
  </div>

</div>