<div class="container-fluid px-0" id="discover-page-content">
  <!-- featured shows -->
  <div class="container-fluid mt-1 pb-1 px-0">
    <h2 class="spotify-label mt-4 mb-0 mx-2 mt-2">Featured Shows</h2>

    <div id="posts" class="horizontal-scroll-container mt-2" >
      <% @posts.each do |post| %>
        <div class="container post-card" style="max-width: 200px;">
          <%= render post %>
        </div>
      <% end %>
    </div>

  </div>
  <h2 class="spotify-label mt-4 mb-0 mx-2 mt-2">Local Artists</h2>

  <!-- artists -->

  <div id="posts" class="horizontal-scroll-container mt-2" >
    <% @artists.each do |artist| %>
      <%= render artist %>
    <% end %>
  </div>
  <!-- all ahows -->
  <h2 class="spotify-label mt-4 mb-0 mx-2 mt-2">All Upcoming Shows</h2>
  <div class="container pt-2 justify-content-center">
    
    <% @posts.each do |post| %>
      <div class="container post-card" style="max-width: 200px;">
        <%= render post %>
      </div>
    <% end %>
  </div>
</div>